<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="D:\DotNetAssessment\SaleAanalyticsApp-nlog.txt">

	<!-- Define various log targets -->
	<targets>
		<!-- Define a file target -->
		<target xsi:type="File" name="file" fileName="D:\DotNetAssessment\SaleAanalyticsApp-${shortdate}.txt" layout="${longdate}|${level}|${logger}|${message}  ${exception:format=tostring}" />
	</targets>

	<!-- Define logging rules -->
	<rules>
		<logger name="*" minlevel="Trace" writeTo="file" />
	</rules>
</nlog>
